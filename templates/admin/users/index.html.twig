{% extends 'layout/admin_index_base.html.twig' %}

{% block main %}
    <main>
        <div id="table-page">
            <section class="w-100 m-auto pt-3">
                <div class="ta-l">
                    <h1 class="fw-600">Utilisateurs</h1>
                </div>
                <div class="ta-r">
                    <a href="/admin/users/new" class="m-0-5 button-bb-wc br-5 fw-600">Nouvel utilisateur</a>
                </div>
                <div class="d-f fd-r flex-w grid-3 jc-sa mt-1 pb-3">
                    <div class="table-container">
                        <div class="ai-c pt-1 fs-1c3 fw-700 d-f fd-r jc-sa bcg-light3 table-titles-desktop">
                            <span class="table-title-item fb-15">Nom d'utilisateur</span>
                            <span class="table-title-item fb-15">Email</span>
                            <span class="table-title-item fb-5">Statut</span>
                            <span class="table-title-item fb-10">Role</span>
                            <span class="table-title-item fb-10">Date d'inscription</span>
                            <span class="table-title-item fb-10">Dernière connexion</span>
                            <span class="table-title-item fb-10">Operation</span>
                        </div>
                        {% for user in content.items %}
                        <div class="table-row">
                            <div class="table-titles-mobile">
                                <span class="table-title-item fb-15">Nom d'utilisateur</span>
                                <span class="table-title-item fb-15">Email</span>
                                <span class="table-title-item fb-5">Statut</span>
                                <span class="table-title-item fb-10">Role</span>
                                <span class="table-title-item fb-10">Date d'inscription</span>
                                <span class="table-title-item fb-10">Dernière connexion</span>
                                <span class="table-title-item fb-10">Operation</span>
                            </div>
                            <div class="table-info {% if not loop.last %} bb-dg {% endif %}">
                                <span class="table-info-item fb-15">{{ user.username }}</span>
                                <span class="table-info-item fb-15">{{ user.email }}</span>
                                <span class="table-info-item fb-5">{{ user.status ? 'activé' : 'desactivé'}}</span>
                                <span class="table-info-item fb-10">{% for role in user.roles %} {{ role }}{% endfor %}</span>
                                <span class="table-info-item fb-10">{{ user.createdAt|date("d/m/Y: H:i") }}</span>
                                <span class="table-info-item fb-10">{{ user.lastConnexion|date("d/m/Y: H:i") }}</span>
                                <span class="table-info-item fb-10">
                                    <button class="table-action-button button-bb-wc js-toggle" data-type="display" data-target-id="actionDropdown{{ loop.index }}">Action</button>
                                     <ul class="dropdown d-n" id="actionDropdown{{ loop.index }}">
                                        <li><a href="/admin/users/{{ user.slug }}/edit" class="">Modifier</a></li>
                                        <li><a href="/admin/users/{{ user.slug }}/delete" class="">Supprimer</a></li>
                                    </ul>
                                </span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div>
                        {% include '/partials/inc/pagination.html.twig' %}
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}