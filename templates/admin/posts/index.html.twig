{% extends 'layout/admin_index_base.html.twig' %}


{% block main %}
    <main>
        <div class="maw-90 m-auto mt-3 mb-3 d-f fd-c">
            <section class="w-100 m-auto pt-3">
                <div class="ta-l">
                    <h1 class="fw-600">Articles</h1>
                </div>
                <div class="ta-r">
                    <a href="/admin/posts/new" class="m-0-5 button-bb-wc br-5 fw-600">Nouvel article</a>
                </div>
                <div class="d-f fd-r flex-w grid-3 jc-sa mt-1 pb-3">
                    <div class="bcg-light2 pb-1 br-10 w-100 d-f fd-c ac-c">
                        <div class="ai-c pt-1 fs-1c3 fw-700 d-f fd-r jc-sa bcg-light3">
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-15">Titre</span>
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-15">Url</span>
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-10">Auteur</span>
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-10">Date de publication</span>
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-10">Date de modification</span>
                            <span class="text-muted fs-1 tt-u mb-0-5 fw-500 fb-10">Operation</span>
                        </div>
                        {% for post in content.items %}
                        <div class="ai-c fs-1c3 fw-700 d-f fd-r jc-sa hrem-5 {% if not loop.last %} bb-dg {% endif %}">
                            <span class="text-muted fs-1 mb-0-5 fw-500 fb-15">{{ post.title }}</span>
                            {% if post.path is defined and post.path is not empty %}
                                <span class="text-muted fs-09 mb-0-5 fw-500 fb-15">{{ '/' ~ app.constants.host ~ post.path }}</span>
                            {% else %}
                                <span class="text-muted fs-09 mb-0-5 fw-500 fb-15">{{ app.constants.host ~ '/'~ post.category.path ~ '/' ~post.slug }}</span>
                            {% endif %}
                            <span class="text-muted fs-09 mb-0-5 fw-500 fb-10">{{ post.author.username }}</span>
                            <span class="text-muted fs-09 mb-0-5 fw-500 fb-10">{{ post.createdAt|date("d/m/Y: H:i") }}</span>
                            <span class="text-muted fs-09 mb-0-5 fw-500 fb-10">{{ post.updatedAt is empty ? "" : post.updatedAt|date("d/m/Y: H:i")  }}</span>
                            <span class="text-muted fs-09 mb-0-5 fw-500 fb-10">
                                <button class="m-0-5 button-bb-wc br-5 fw-600 js-toggle" data-type="display" id="actionButton{{ loop.index }}" data-target-id="actionDropdown{{ loop.index }}">Action</button>
                                 <ul class="dropdown d-n" id="actionDropdown{{ loop.index }}">
                                    <li><a href="/admin/posts/{{ post.slug }}/edit" class="">Modifier</a></li>
                                    <li><a href="/admin/posts/{{ post.slug }}/delete" class="">Supprimer</a></li>
                                    <li><a href="{{ post.path }}" class="">Voir</a></li>
                                </ul>
                            </span>
                        </div>
                        {% endfor %}
                    </div>
                    <div>
                    {% include '/partials/inc/pagination.html.twig' %}
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}