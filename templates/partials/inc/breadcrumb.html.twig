{% if app.breadcrumb is defined and app.breadcrumb is not empty %}
    <ul class="breadcrumb">
    {% for breadcrumb in app.breadcrumb%}
        <li class="d-ib text-muted fs-07">
            <a href="{{ breadcrumb.path }}">{{ breadcrumb.name }}</a>
        </li>
        {%  if false == loop.last  %} > {% endif %}
    {% endfor %}
    </ul>
{% endif %}
