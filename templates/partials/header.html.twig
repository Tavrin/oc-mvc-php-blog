<header class="m-auto maw-70">
    <nav class="">
        <ul class="pb-1 ai-c pt-1 d-f fd-r jc-sb td-n">
            <li>
                <a href="/" class="top-link">Etienne Doux</a>
            </li>
            <li class="fw-700 h3 ff-titi">
                <a href="/blog" class="top-link">Blog</a>
            </li>
            <li class="fw-700 h3 ff-titi">
                {% if app.user is defined and app.user is not empty %}
                    <a href="#" class="fw-700 h3 ff-titi" id="userDropdown"><i class="fas fa-user"></i></a>
                    <ul class="dropdown d-n" id="userDropdownLinks">
                        <li><a href="/membres/{{ app.user.slug }}" class="">Profil</a></li>
                        <li><a href="/user/settings" class="">Paramètres</a></li>
                        <li><a href="/logout" class="">Déconnexion</a></li>
                    </ul>
                {% else %}
                    <a href="/login" class="fw-700 h3 ff-titi d-f ai-c"><span class="fs-08 pr-0-5">Connexion</span> <i class="fas fa-sign-in-alt"></i></a>
                {% endif %}
            </li>
        </ul>
    </nav>
    <nav class=" bt-g pt-0-5">
        <a href="#" class="fw-700 h3 ff-titi js-toggle" data-target-id="categoryDropdownLinks" data-type="display" id="categoryDropdown"><i class="fas fa-bars"></i></a>
        <ul id="categoryDropdownLinks" class=" d-f fd-r jc-sb td-n" data-toggle-class="active" data-revert-toggle="true">
            {% if content.categories is defined and content.categories is not empty %}
                {% for category in content.categories %}
                    <li>
                        <a href="{{ category.path }}">{{ category.name }}</a>
                    </li>
                {% endfor %}
            {% else %}
            <li>
                <a href="/blog/backend-dev">Backend Dev</a>
            </li>
            <li>
                <a href="/blog/frontend-dev">Frontend Dev</a>
            </li>
            <li>
                <a href="#">Game Dev</a>
            </li>
            <li>
                <a href="#">Web Design</a>
            </li>
            <li>
                <a href="#">Game Design</a>
            </li>
            <li>
                <a href="#">Digital Painting</a>
            </li>
            {% endif %}
        </ul>
    </nav>
    {% include 'partials/inc/breadcrumb.html.twig' %}
</header>